<mvc:View 
    controllerName="lorkgroup.moduloempleado.controller.VerEmpleados.VerEmpleados"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">

    <!-- Página principal con título y botón de navegación -->
    <Page title="Crear Usuario con Salario y Adjuntos" enableScrolling="true">
        <!-- Botón de cabecera para volver al menú principal -->
        <headerContent>
            <Button text="Menú Principal" icon="sap-icon://home" press="onNavigateToMenuPrincipal" />
        </headerContent>

        <!-- Componente SplitApp para la estructura maestro-detalle -->
        <SplitApp id="SplitApp">

            <!-- Columna izquierda: Lista de empleados -->
            <masterPages>
                <Page id="employeeListPage" title="Buscar" enableScrolling="true">
                    <content>
                        <!-- Campo de búsqueda -->
                        <SearchField 
                            id="searchField" 
                            placeholder="Buscar usuario" 
                            search="onSearch" />

                        <!-- Lista de usuarios -->
                        <List
                            id="userList"
                            items="{
                                path: 'erp13>/Users'
                            }"
                            mode="SingleSelectMaster"
                            selectionChange="onUserSelect">
                            <StandardListItem
                                title="{erp13>FirstName} {erp13>LastName} - ({erp13>EmployeeId})"
                                description="{erp13>Dni}"
                                infoState="Success" />
                        </List>
                    </content>
                </Page>
            </masterPages>

            <!-- Columna derecha: Detalle del empleado y navegación -->
            <detailPages>
                <!-- Contenedor de navegación -->
                <NavContainer id="detailNavContainer">
                    <!-- Página de Detalle 1 (Información del empleado) -->
                    <Page id="employeeDetailPage" title="Detalle del Empleado">
                        <content>
                            <!-- Fragmento para mostrar detalles del empleado -->
                            <core:Fragment fragmentName="lorkgroup.moduloempleado.view.VerEmpleados.fragment.ListaEmpleados0" type="XML" />
                        </content>
                        <footer view="true">
                            <Toolbar>
                                <ToolbarSpacer />
                                <Button text="Ver Historial" press="onNavigateToHistory" />
                            </Toolbar>
                        </footer>
                    </Page>

                    <!-- Página de Detalle 2 (Historial del empleado) -->
                    <Page id="employeeHistoryPage" title="Historial del Empleado">
                        <content>
                            <!-- Fragmento para mostrar el historial del empleado -->
                            <core:Fragment fragmentName="lorkgroup.moduloempleado.view.VerEmpleados.fragment.ListaEmpleados1" type="XML" />
                        </content>
                        <footer view="true">
                            <Toolbar>
                                <ToolbarSpacer />
                                <Button text="Regresar" press="onNavigateToDetail" />
                            </Toolbar>
                        </footer>
                    </Page>
                </NavContainer>
            </detailPages>

        </SplitApp>
    </Page>
</mvc:View>
