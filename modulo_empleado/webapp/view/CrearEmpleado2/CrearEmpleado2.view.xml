<mvc:View
    controllerName="lorkgroup.moduloempleado.controller.CrearEmpleado2.CrearEmpleado2"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form">
    <Page title="Crear Empleado">
        <content>
            <form:SimpleForm
                id="simpleForm1"
                editable="true"
                layout="ResponsiveGridLayout"
                title="Información del Empleado"
                class="sapUiSmallMargin sapUiLargeMarginBottom">

                <!-- Información del Empleado -->
                <Label text="ID de Empleado" />
                <Input value="{users>/Users/EmployeeId}" />

                <Label text="ID de SAP" />
                <Input value="{users>/Users/SapId}" />

                <Label text="Tipo" />
                <Input value="{users>/Users/Type}" />

                <Label text="Nombre" />
                <Input value="{users>/Users/FirstName}" />

                <Label text="Apellido" />
                <Input value="{users>/Users/LastName}" />

                <Label text="DNI" />
                <Input value="{users>/Users/Dni}" />

                <Label text="Fecha de Creación" />
                <DatePicker value="{users>/Users/CreationDate}" displayFormat="yyyy-MM-dd" />

                <Label text="Comentarios" />
                <Input value="{users>/Users/Comments}" />

                <!-- Información del Salario -->
                <Label text="ID del Salario" />
                <Input value="{users>/Salaries/SalaryId}" />

                <Label text="Monto del Salario" />
                <Input value="{users>/Salaries/Amount}" />

                <Label text="Moneda" />
                <Input value="{users>/Salaries/Waers}" editable="false" />


                <!-- Adjuntos -->
                <Label text="ID de Adjunto" />
                <Input value="{users>/Attachments/AttId}" />

                <Label text="Nombre del Documento" />
                <Input value="{users>/Attachments/DocName}" />

                <Label text="Tipo MIME" />
                <Input value="{users>/Attachments/MimeType}" />
            </form:SimpleForm>

            <!-- Botón para guardar los datos en OData ERP13 -->
            <Button 
                text="Guardar Datos" 
                press="onGuardarDatos" 
                class="sapUiLargeMarginTop" />

        </content>
    </Page>
</mvc:View>
